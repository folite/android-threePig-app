<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.rank">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:onClick="couponListPage">

            <ImageView
                app:srcCompat="@drawable/i1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView19"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/i1" />

            <TextView
                android:text="折價卷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView119"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:onClick="button_finishOrderList">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/i2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView20"
                android:background="@drawable/i2" />

            <TextView
                android:text="訂單"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView120"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:onClick="toHome">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/i3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView21"
                android:background="@drawable/i3" />

            <TextView
                android:text="首頁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView121"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:onClick="listpage">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/i4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView22"
                android:background="@drawable/i4" />

            <TextView
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView122"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:onClick="button_date_click">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/i5"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView23"
                android:background="@drawable/i5" />

            <TextView
                android:text="會員中心"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView123"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="每周排行榜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView129"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="?attr/colorAccent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rank1"
                android:id="@+id/imageView27" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView139"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView138"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp" />

            <TextView
                android:text="第一名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView138"
                android:layout_alignBaseline="@+id/textView139"
                android:layout_alignBottom="@+id/textView139"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox10"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:checked="false" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView132"
                android:layout_alignBaseline="@+id/checkBox10"
                android:layout_alignBottom="@+id/checkBox10"
                android:layout_toStartOf="@+id/checkBox10"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView140"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/textView132"
                android:layout_alignBottom="@+id/textView132"
                android:layout_toStartOf="@+id/textView132" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="第二名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView141"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox11"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView143"
                android:layout_alignBaseline="@+id/checkBox11"
                android:layout_alignBottom="@+id/checkBox11"
                android:layout_toStartOf="@+id/checkBox11"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView137"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/textView143"
                android:layout_alignBottom="@+id/textView143"
                android:layout_toStartOf="@+id/textView143" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView142"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/textView141"
                android:layout_alignBottom="@+id/textView141"
                android:layout_toEndOf="@+id/textView141"
                android:layout_marginStart="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="第三名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView144"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView145"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView144"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox12"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView146"
                android:layout_alignBaseline="@+id/checkBox12"
                android:layout_alignBottom="@+id/checkBox12"
                android:layout_toStartOf="@+id/checkBox12"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView147"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/textView146"
                android:layout_alignBottom="@+id/textView146"
                android:layout_toStartOf="@+id/textView146" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imageView28"
                android:background="#ffffff" />

            <ImageView
                app:srcCompat="@drawable/rank2"
                android:id="@+id/imageView29"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView28"
                android:layout_marginStart="53dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView131"
                android:layout_below="@+id/imageView28"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_alignBottom="@+id/imageView28"
                android:layout_alignParentEnd="true"
                android:background="?attr/colorAccent"
                android:layout_height="80dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView150"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView149"
                    android:layout_marginBottom="10dp"
                    android:layout_above="@+id/textView150"
                    android:layout_alignStart="@+id/textView150"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/rank"
                    android:id="@+id/imageView32"
                    android:onClick="next"
                    android:layout_above="@+id/textView150"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView130"
                android:layout_marginBottom="11dp"
                android:layout_alignBottom="@+id/imageView29"
                android:layout_toEndOf="@+id/imageView29"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/back"
                android:id="@+id/imageView31"
                android:onClick="back"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">

            <Button
                android:text="加入購物車"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button20"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:onClick="toOrder"
                android:background="@drawable/buttonshape"
                android:textColor="#ffffff" />

            <Button
                android:text="開始點餐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button21"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/button20"
                android:layout_marginEnd="54dp"
                android:background="@drawable/buttonshape"
                android:textColor="#ffffff"
                android:onClick="toMenu" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

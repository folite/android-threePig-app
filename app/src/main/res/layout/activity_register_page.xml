<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.register_page"
    android:background="#ffffff"
    android:gravity="center">



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/editText4"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手機號碼"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_below="@+id/editText1"
        android:layout_toStartOf="@+id/editText1" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="none"
        android:layout_below="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="none"
        android:layout_below="@+id/ed2"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:password="true" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="生日"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_below="@+id/ed5"
        android:layout_alignEnd="@+id/textView6" />

    <EditText
        android:id="@+id/birthday"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:inputType="date"
        android:singleLine="true"
        android:gravity="center"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/ed5"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/birthday" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="none"
        android:gravity="center"
        android:layout_below="@+id/birthday"
        android:layout_alignStart="@+id/birthday"
        android:layout_alignEnd="@+id/ed5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="性別"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:gravity="center" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn_onClick"
        android:text="確定"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/ed5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15dp"
        android:singleLine="false"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食物偏好"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蔬食"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="牛肉"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_below="@+id/checkBox1"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="豬肉"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雞肉"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:layout_below="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海鮮"
        android:id="@+id/checkBox5"
        android:checked="false"
        android:layout_below="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認密碼"
        android:textSize="18sp"
        android:textColor="#020202"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:id="@+id/ed5"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="none"
        android:gravity="center"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:password="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#020202"
        android:layout_below="@+id/spinner"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(蔬菜，起司，素肉鬆)"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(豬，培根，火腿，肉鬆)"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox3" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(魚，蝦)"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/checkBox5"
        android:layout_toEndOf="@+id/checkBox5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="顯示卡路里"
        android:id="@+id/button"
        android:layout_below="@+id/checkBox5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇大頭貼"
        android:id="@+id/button2"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView40"
        android:layout_below="@+id/ed5"
        android:layout_alignStart="@+id/ed5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ui"
        android:id="@+id/button17"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="gonewui" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scaleType = "centerCrop"
    android:background="@drawable/login"
    tools:context="com.example.myapplication.login_main"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="登入"
        android:id="@+id/button_login"
        android:onClick="button_login_Click"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff"
        android:radius="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="註冊"
        android:id="@+id/button_register"
        android:onClick="button_register_Click"
        android:layout_below="@+id/login_password"
        android:layout_toEndOf="@+id/button_login"
        android:layout_marginStart="5dp"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="忘記密碼？"
        android:textColor="#FFFFFF"
        android:id="@+id/forget_password"
        android:layout_alignBaseline="@+id/button_register"
        android:layout_alignBottom="@+id/button_register"
        android:layout_toEndOf="@+id/button_register"
        android:layout_marginStart="29dp"
        android:onClick="button_forget_click" />

    <EditText
        android:layout_width="match_parent"
        android:background="#a04C4E4E"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:id="@+id/login_password"
        android:layout_above="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:hint="密碼"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="#ccffffff"
        android:layout_height="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:background="#a04C4E4E"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:id="@+id/login_account"
        android:layout_above="@+id/login_password"
        android:layout_alignParentStart="true"
        android:phoneNumber="false"
        android:hint="手機號碼"
        android:inputType="number|phone"
        android:singleLine="true"
        android:textColorHint="#ccffffff"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="註冊或登入帳號"
        android:id="@+id/textView"
        android:layout_above="@+id/login_account"
        android:layout_toEndOf="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:gravity="center"
        android:background="#70ff5447"
        android:layout_marginBottom="15dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Three Little P!gs"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false" />

</RelativeLayout>
